{
  "name": "@10up/headless_framework",
  "version": "1.0.0",
  "description": "Monorepo for headless framework",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "npm run build -w=@10up/headless-core && npm run build -w=@10up/headless-next",
    "test": "turbo run test",
    "lint": "eslint .",
    "dev": "turbo run dev --parallel",
    "prepare": "husky install"
  },
  "author": "Nícholas André <nicholas.andre@10up.com>",
  "workspaces": [
    "packages/*",
    "projects/*"
  ],
  "devDependencies": {
    "@10up/eslint-config": "^2.3.7",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "concurrently": "^6.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-jest": "^24.4.2",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "turbo": "^1.2.4"
  },
  "nextBundleAnalysis": {
    "buildOutputDirectory": "./projects/wp-nextjs/.next",
    "budget": 148480,
    "budgetPercentIncreaseRed": 20,
    "showDetails": true
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
