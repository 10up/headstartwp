{
  "name": "@10up/headless_framework",
  "description": "Monorepo for headless framework",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint .",
    "dev": "concurrently \"npm run dev -w=@10up/headless-core\" \"npm run dev -w=@10up/headless-next\" \"npm run dev -w=@10up/wp-nextjs\"",
    "prepare": "husky install"
  },
  "author": "Nícholas André <nicholas.andre@10up.com>",
  "workspaces": [
    "packages/*",
    "projects/*"
  ],
  "devDependencies": {
    "@10up/eslint-config": "^2.3.7",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "concurrently": "^6.3.0",
    "eslint-plugin-jest": "^24.4.2",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2"
  }
}
